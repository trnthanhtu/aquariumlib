<section>
              <div id="container">
                <div class="container">
<center>
<div class="row">
<div class="span2"></div>
<div class="span8">
<div class="box-container">
	<%=form_for :contact, :html => {:class => 'form-horizontal', :id => "register"}  do |f|%>
		<h2>FORM LIÊN HỆ</h2>
		<div class="content">
			<table class="form">
				<tbody>
				<tr>
					<td>
						<div class="control-group">
							
							<div class="controls">
								<%=flash[:notice]%>								
							</div>
						</div>
					</td>
				</tr>
				<tr>
					<td>
						<div class="control-group">
							<label class="control-label" for="firstname"><span class="required">*</span> Họ tên:</label>
							<div class="controls">
								<%=f.text_field :name, class: 'q1 span5', :required => true%>
								
							</div>
						</div>
					</td>
				</tr>
				<tr>
					<td>
						<div class="control-group">
							<label class="control-label" for="lastname"><span class="required"></span> Email:</label>
							<div class="controls">
								<%=f.text_field :email, class: 'q1 span5', :required => true%>
							</div>
						</div>
					</td>
				</tr>
				<tr>
					<td>
						<div class="control-group">
							<label class="control-label" for="email"><span class="required"></span> Số điện thoại:</label>
							<div class="controls">
								<%=f.text_field :phone_number, class: 'q1 span5', :required => true%>

							</div>
						</div>
					</td>
				</tr>
			<tr>
			<td>
				<div class="control-group">
					<label class="control-label" for="password"><span class="required">*</span> Nội dung:</label>
					<div class="controls">
							<%=f.text_area :description, cols: '40', rows: '10', style: 'width:98%' %>

							</div>
				</div>
			</td>
		</tr>
			</tbody></table>
		</div>
	
<div class="buttons">
	<div class="right">
			<a onclick="$('#register').submit();" class="button"><span>GỬI THƯ</span></a>
		</div>
	</div>
<%end%></div>
</div>
</div>
</center>
</div>
              </div>
              <div class="clear"></div>
            </section>